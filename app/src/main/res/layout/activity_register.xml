                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:drawableTint="#d1323a"
                    android:fontFamily="@font/noto_sans"
                    android:inputType="text"
                    android:textColor="#808D9E"
                    android:textColorHint="#D1D1D1"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/noto_sans"
                android:text="Enter Confirm Password"
                android:textColor="@color/textprimaryColor"
                android:textSize="16dp" />

            <LinearLayout
                android:id="@+id/reffertvlayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundedbackground">

                <EditText
                    android:id="@+id/et_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:drawableTint="#d1323a"
                    android:fontFamily="@font/noto_sans"
                    android:inputType="text"
                    android:textColor="#808D9E"
                    android:textColorHint="#D1D1D1"
                    android:textSize="20sp" />

            </LinearLayout>


            <Button
                android:id="@+id/bt_register"
                style="@style/PrimayButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/noto_sans_semibold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginBottom="30dp"
                android:textSize="16dp"
                app:boxCornerRadiusBottomEnd="10dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>